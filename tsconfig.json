{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts",
  ]
}
