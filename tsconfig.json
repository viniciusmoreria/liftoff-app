{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@libs/*": ["libs/*"],
      "@navigation/*": ["navigation/*"],
      "@features/*": ["features/*"],
      "@providers/*": ["providers/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
